    <script>
        // Ocean wave effect on load
        window.addEventListener('load', function() {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.8s ease-in-out';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });

        // Gentle bubble movement on mouse interaction
        document.addEventListener('mousemove', function(e) {
            const bubbles = document.querySelectorAll('.bubble');
            bubbles.forEach((bubble, index) => {
                const speed = (index + 1) * 0.015;
                const x = (e.clientX * speed) / 150;
                const y = (e.clientY * speed) / 150;
                bubble.style.transform += ` translate(${x}px, ${y}px)`;
            });
        });

        // Enhanced ripple effect for wave image cards
        document.querySelectorAll('.wave-image-card, .hex-image-card, .diamond-image-card').forEach(card => {
            card.addEventListener('click', function() {
                this.style.transform += ' scale(0.98)';
                setTimeout(() => {
                    this.style.transform = this.style.transform.replace(' scale(0.98)', '');
                }, 200);
            });
        });

        // Add gentle scroll parallax effect
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const bg = document.querySelector('.wave-bg');
            const bubbles = document.querySelectorAll('.bubble');
            
            bg.style.transform = `translateY(${scrolled * 0.5}px)`;
            
            bubbles.forEach((bubble, index) => {
                const speed = (index + 1) * 0.3;
                bubble.style.transform += ` translateY(${scrolled * speed}px)`;
            });
        });

