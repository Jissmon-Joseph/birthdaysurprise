    </audio>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tone.js/14.8.49/Tone.min.js"></script>
    <script>
        // Premium background music using Tone.js
        let synth, reverb, delay;
        let isInitialized = false;

        async function initializeAudio() {
            if (isInitialized) return;
            
            await Tone.start();
            
            // Create a romantic piano-like synth
            synth = new Tone.PolySynth(Tone.Synth, {
                oscillator: {
                    type: "sine"
                },
                envelope: {
                    attack: 0.5,
                    decay: 0.8,
                    sustain: 0.4,
                    release: 2
                }
            });

            // Add effects for warmth
            reverb = new Tone.Reverb({
                decay: 4,
                wet: 0.4
            });

            delay = new Tone.FeedbackDelay({
                delayTime: "8n",
                feedback: 0.2,
                wet: 0.1
            });

            synth.connect(delay);
            delay.connect(reverb);
            reverb.toDestination();

            // Set volume
            Tone.Destination.volume.value = -15;
            
            isInitialized = true;
        }

        // Romantic chord progression
        const chordProgression = [
            ["C4", "E4", "G4", "B4"],   // Cmaj7
            ["A3", "C4", "E4", "A4"],   // Am
            ["F3", "A3", "C4", "F4"],   // F
            ["G3", "B3", "D4", "G4"],   // G
            ["E3", "G3", "B3", "E4"],   // Em
            ["A3", "C4", "E4", "A4"],   // Am
            ["F3", "A3", "C4", "F4"],   // F
            ["G3", "B3", "D4", "G4"]    // G
        ];

        let currentChord = 0;
        let musicPlaying = false;

        function playRomanticMusic() {
            if (!musicPlaying || !isInitialized) return;
            
            const chord = chordProgression[currentChord];
            synth.triggerAttackRelease(chord, "2n");
            
            currentChord = (currentChord + 1) % chordProgression.length;
            
            setTimeout(playRomanticMusic, 3000); // 3 second intervals
        }

        // Start music after 4 seconds
        setTimeout(async () => {
            await initializeAudio();
            musicPlaying = true;
            playRomanticMusic();
        }, 4000);

        // Navigation function
        function nextPage() {
            // This would navigate to the next page (Y page)
            alert('Navigation to next page would be implemented here');
        }

        // Add some interactive effects
        document.querySelectorAll('.image-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.filter = 'brightness(1.1) saturate(1.2)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.filter = 'brightness(1) saturate(1)';
            });
        });

        // Parallax effect for floating orbs
        document.addEventListener('mousemove', (e) => {
            const orbs = document.querySelectorAll('.floating-orb');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            orbs.forEach((orb, index) => {
                const speed = (index + 1) * 0.5;
                orb.style.transform += ` translate(${x * speed}px, ${y * speed}px)`;
            });
        });
    </script>
