<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Why I Love You</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow-x: hidden;
        }

        .container {
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .heading {
            color: white;
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: fadeInDown 1s ease-out;
        }

        .image-container {
            position: relative;
            width: 100%;
            height: 70vh;
            max-height: 600px;
            background: #000;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            animation: fadeInUp 1s ease-out 0.5s both;
        }

        .background-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 20px;
        }

        .text-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
            padding: 40px 30px 30px 30px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            align-items: center;
            color: white;
            text-align: center;
            border-radius: 0 0 20px 20px;
        }

        .reason-text {
            font-size: 1.6rem;
            font-weight: 600;
            margin-bottom: 8px;
            opacity: 0;
            transform: translateY(20px);
            text-shadow: 0 2px 8px rgba(0,0,0,0.9);
            letter-spacing: 0.5px;
        }

        .reason-detail {
            font-size: 1rem;
            opacity: 0;
            transform: translateY(20px);
            max-width: 350px;
            line-height: 1.5;
            text-shadow: 0 1px 4px rgba(0,0,0,0.9);
            font-style: italic;
            color: rgba(255, 255, 255, 0.9);
        }

        .final-message {
            font-size: 1.8rem;
            font-weight: 700;
            opacity: 0;
            transform: scale(0.8);
            text-shadow: 0 2px 8px rgba(0,0,0,0.9);
            text-align: center;
            letter-spacing: 1px;
            line-height: 1.3;
        }

        .hearts {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 10;
        }

        .heart {
            position: absolute;
            color: #ff6b85;
            font-size: 2rem;
            opacity: 0;
            animation: floatHeart 4s linear infinite;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInFade {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes scaleInFade {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes floatHeart {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        @media (max-width: 600px) {
            .heading {
                font-size: 2rem;
            }
            
            .image-container {
                height: 60vh;
            }
            
            .text-overlay {
                padding: 30px 20px 20px 20px;
            }
            
            .reason-text {
                font-size: 1.3rem;
            }
            
            .reason-detail {
                font-size: 0.9rem;
                max-width: 280px;
            }
            
            .final-message {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="heading">Why I Love You</h1>
        
        <div class="image-container">
            <!-- Replace 'your-image.jpg' with the path to your image -->
            <img src="https://images.squarespace-cdn.com/content/v1/5519ab2ee4b02a4410b6a7c6/1573572780880-TNGN7R4EX4N141SBXP50/beautiful-hands-heart-5390.jpg" alt="Love Photo" class="background-image">
            
            <div class="text-overlay" id="textOverlay">
                <div class="reason-text" id="reasonText"></div>
                <div class="reason-detail" id="reasonDetail"></div>
                <div class="final-message" id="finalMessage"></div>
            </div>
            
            <div class="hearts" id="heartsContainer"></div>
        </div>
    </div>

    <!-- Background Music -->
    <!-- <audio id="bgMusic" loop preload="auto" autoplay>
        <source src="/asset/audios/Tujh Mein Rab Dikhta.mp3">
    </audio> -->
    <audio id="bgMusic" loop preload="auto" autoplay>
    <source src="/asset/audios/Tujh Mein Rab Dikhta.mp3">
</audio>

    <script>
        const music = document.getElementById('bgMusic');
        const heartsContainer = document.getElementById('heartsContainer');

        //  function playAudio() {
        //     // Try to play it (will fail silently if autoplay is blocked)
        //     audio.play()
        //     .catch(function (error) {
        //         console.log("Autoplay blocked. User interaction required.");
        //     });
        // }

    function playAudio() {
        // Try to play it (will fail silently if autoplay is blocked)
        music.play()
        .catch(function (error) {
            console.log("Autoplay blocked. User interaction required.");
        });
    }
        
        // Video content configuration
        const reasons = [
            { title: "Your Beautiful Smile", detail: "It lights up my entire world" },
            { title: "Your Kind Heart", detail: "You care for everyone around you" },
            { title: "Your Amazing Laugh", detail: "It's the most beautiful sound" },
            { title: "Your Intelligence", detail: "You inspire me every day" },
            { title: "Just Being You", detail: "Perfect in every way" }
        ];
        
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = 'ðŸ’–';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDelay = Math.random() * 2 + 's';
            heartsContainer.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 4000);
        }
        
        function animateTextOverImage() {
            const reasonText = document.getElementById('reasonText');
            const reasonDetail = document.getElementById('reasonDetail');
            const finalMessage = document.getElementById('finalMessage');
            
            let currentReason = 0;
            
            function showNextReason() {
                if (currentReason < reasons.length) {
                    const reason = reasons[currentReason];
                    
                    // Reset and show title
                    reasonText.textContent = reason.title;
                    reasonText.style.animation = 'slideInFade 0.5s ease-out forwards';
                    
                    setTimeout(() => {
                        // Show detail
                        reasonDetail.textContent = reason.detail;
                        reasonDetail.style.animation = 'slideInFade 0.5s ease-out forwards';
                        
                        setTimeout(() => {
                            // Hide both
                            reasonText.style.animation = '';
                            reasonDetail.style.animation = '';
                            reasonText.style.opacity = '0';
                            reasonDetail.style.opacity = '0';
                            
                            currentReason++;
                            setTimeout(showNextReason, 500);
                        }, 1500);
                    }, 500);
                } else {
                    // Show final message
                    finalMessage.innerHTML = 'I Love You Baby<br>Just The Way You Are';
                    finalMessage.style.animation = 'scaleInFade 1s ease-out forwards';
                    
                    setTimeout(() => {
                        // Reset for loop
                        finalMessage.style.animation = '';
                        finalMessage.style.opacity = '0';
                        currentReason = 0;
                        setTimeout(showNextReason, 3000);
                    }, 3000);
                }
            }
            
            showNextReason();
        }
        
        // Start hearts animation
        function startHearts() {
            setInterval(() => {
                if (Math.random() < 0.3) {
                    createHeart();
                }
            }, 500);
        }
        
        window.addEventListener('load', () => {
            setTimeout(() => {
                // Start music
                music.play().catch(e => {
                    console.log('Audio autoplay prevented:', e);
                    document.addEventListener('click', () => {
                        music.play();
                    }, { once: true });
                });
                
                // Start text animation
                animateTextOverImage();
                
                // Start hearts
                startHearts();
            }, 1000);
        });
    </script>
</body>
</html>