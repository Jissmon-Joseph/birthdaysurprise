<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
    <title>A Special Birthday Wish</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', 'Times New Roman', serif;
            background: linear-gradient(rgb(214, 177, 192), rgba(255, 255, 255, 0.762), rgba(255, 255, 255, 0.499));
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        /* Floating Hearts Animation */
        .heart-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
            overflow: hidden;
        }

        .heart {
            position: absolute;
            color: rgba(255, 182, 193, 0.6);
            font-size: 20px;
            animation: floatHearts 12s infinite linear;
        }

        @keyframes floatHearts {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        /* Main Container */
        .page-container {
            position: relative;
            z-index: 10;
            min-height: 100vh;
        }

        /* Page Header */
        .page-header {
            text-align: center;
            padding: 3rem 2rem;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-bottom: 3px solid rgba(255, 20, 147, 0.2);
        }

        .main-title {
            font-size: clamp(3rem, 8vw, 6rem);
            color: #e1107c;
            font-weight: 400;
            letter-spacing: 4px;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 1rem;
            animation: titleGlow 3s infinite ease-in-out;
            font-family: cursive;
        }

        .subtitle {
            font-size: clamp(1.2rem, 3vw, 1.8rem);
            color: #6c5ce7;
            font-style: italic;
            letter-spacing: 2px;
        }

        @keyframes titleGlow {

            0%,
            100% {
                text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
            }

            50% {
                text-shadow: 3px 3px 20px rgba(255, 20, 147, 0.4);
            }
        }

        /* Section 1 - Video Hero */
        .video-hero-section {
            position: relative;
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .video-container {
            position: relative;
            width: 100%;
            max-width: 800px;
            aspect-ratio: 4/3;
            border-radius: 25px;
            overflow: hidden;
            box-shadow:
                0 25px 50px rgba(0, 0, 0, 0.15),
                0 12px 25px rgba(0, 0, 0, 0.1);
            border: 4px solid rgba(255, 255, 255, 0.385);
        }

        .main-video {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .video-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: clamp(1.5rem, 4vw, 3rem);
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            pointer-events: none;
            z-index: 20;
        }

        /* Section 2 - Lantern Video + Making Grid */
        .lantern-section {
            position: relative;
            min-height: 90vh;
            padding: 4rem 2rem;
            background: linear-gradient(90deg, rgb(0, 0, 0) 40%, rgb(37, 42, 32), rgb(84, 104, 102), rgb(167, 163, 148));
        }

        .lantern-container {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
            height: 100%;
        }

        .lantern-video-container {
            position: relative;
            aspect-ratio: 9/16;
            max-height: 600px;
            border-radius: 25px;
            overflow: hidden;
        }

        .lantern-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background: #1a1a2e;
        }

        .making-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 1rem;
            height: 500px;
        }

        .making-video-container {
            grid-column: 1;
            grid-row: 1 / 3;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
            border: 2px solid rgba(255, 255, 255, 0.9);
            background: #f0f8ff;
            transition: all 0.3s ease;
            position: relative;
        }

        .making-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background: #000;
        }

        .making-video-container:hover {
            transform: scale(1.05) rotate(2deg);
            box-shadow: 0 18px 35px rgba(0, 0, 0, 0.2);
        }

        .grid-image {
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
            border: 2px solid rgba(255, 255, 255, 0.9);
            background: #f0f8ff;
            transition: all 0.3s ease;
            width: 100%;
            height: 100%;
        }

        .grid-image:nth-child(2) {
            grid-column: 2;
            grid-row: 1;
        }

        .grid-image:nth-child(3) {
            grid-column: 2;
            grid-row: 2;
        }

        .grid-image:hover {
            transform: scale(1.05) rotate(2deg);
            box-shadow: 0 18px 35px rgba(0, 0, 0, 0.2);
        }

        /* Section 3 - Final Image with Caption */
        .final-image-section {
            position: relative;
            padding: 4rem 2rem;
            min-height: 100vh;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(15px);
            margin: 2rem 0;
        }

        .final-image-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 3rem;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        .final-image-wrapper {
            flex: 1.2;
            position: relative;
            height: 70vh;
            min-height: 500px;
            width: 100%;
        }

        .final-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 30px;
            box-shadow:
                0 30px 60px rgba(0, 0, 0, 0.2),
                0 15px 30px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.23);
            background: #f9f9f9;
        }

        .final-caption-content {
            flex: 0.8;
            padding: 3rem 2rem;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 3px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }

        .final-caption-title {
            font-size: clamp(2rem, 4vw, 3rem);
            color: #d63384;
            margin-bottom: 1.5rem;
            font-weight: 400;
            letter-spacing: 2px;
        }

        .final-caption-text {
            font-size: clamp(1.1rem, 2.5vw, 1.4rem);
            color: #621746c4;
            line-height: 1.8;
            font-style: italic;
        }

        /* Section 4 - Final Question */
        .final-question-section {
            position: relative;
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 5rem 2rem;
            /* background:
                linear-gradient(180deg, rgba(0, 0, 0, 0.523) 0%, rgba(255, 240, 245, 0.95) 100%); */
            backdrop-filter: blur(25px);
        }

        .question-container {
            text-align: center;
            max-width: 800px;
            padding: 5rem 3rem;
            background:
                linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 240, 245, 0.9));
            border-radius: 40px;
            box-shadow:
                0 50px 100px rgba(255, 20, 20, 0.3),
                0 25px 50px rgba(0, 0, 0, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            border: 5px solid rgba(255, 20, 20, 0.158);
            position: relative;
            overflow: hidden;
        }

        .question-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 20, 147, 0.1), transparent);
            animation: shimmer 4s infinite;
        }

        .final-question {
            font-size: clamp(2.8rem, 7vw, 5rem);
            color: #ff1414;
             font-family: 'Caveat', cursive;
            font-weight: 900;
            letter-spacing: 4px;
            text-shadow:
                2px 2px 4px rgba(0, 0, 0, 0.1),
                0 0 20px rgba(255, 20, 147, 0.3);
            animation: heartbeat 2.5s infinite ease-in-out;
            position: relative;
            z-index: 1;
        }

        @keyframes shimmer {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        @keyframes heartbeat {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.08);
            }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .lantern-container {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .lantern-video-container {
                max-height: 400px;
                justify-self: center;
                max-width: 300px;
            }

            .making-grid {
                height: 400px;
                justify-self: center;
                max-width: 400px;
            }

            .making-video-container {
                grid-column: 1;
                grid-row: 1 / 3;
            }
        }

        @media (max-width: 768px) {
            .lantern-section {
                background: linear-gradient(180deg, rgb(0, 0, 0) 40%, rgb(42, 34, 32), rgb(62, 98, 96), rgb(167, 163, 148));
            }

            .final-image-container {
                flex-direction: column;
                gap: 2rem;
            }

            .final-image-wrapper {
                height: 25vh;
                min-height: 150px;
                width: 100%;
            }

            .final-caption-content {
                padding: 2rem 1.5rem;
                width: 100%;
            }

            .video-hero-section {
                height: 60vh;
                padding: 1rem;
            }

            .video-container {
                aspect-ratio: 4/3;
            }

            .final-question {
                letter-spacing: 2px;
            }

            .question-container {
                padding: 3rem 2rem;
                margin: 0 1rem;
            }

            .page-header {
                padding: 2rem 1rem;
            }

            .main-title {
                letter-spacing: 2px;
            }

            .making-grid {
                height: 350px;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
            }

            .making-video-container {
                grid-column: 1;
                grid-row: 1 / 3;
            }
        }

        @media (max-width: 480px) {
            .final-image-section {
                padding: 2rem 1rem;
                min-height: 10vh;
            }

            .final-caption-content {
                padding: 1.5rem 1rem;
            }

            .lantern-section {
                padding: 2rem 1rem;
            }

            .final-question-section {
                padding: 3rem 1rem;
            }

            .question-container {
                padding: 3rem 1.5rem;
            }

            .page-header {
                padding: 1.5rem 1rem;
            }

            .making-grid {
                height: 300px;
                gap: 0.5rem;
            }

            .final-image-wrapper {
                height: 25px;
                min-height: 50px;
                width: 100%;
            }

            .making-video-container {
                grid-column: 1;
                grid-row: 1 / 3;
            }
        }
    </style>
</head>

<body>
    <!-- Floating Hearts Animation -->
    <div class="heart-animation">
        <div class="heart" style="left: 10%; animation-delay: 0s;">💖</div>
        <div class="heart" style="left: 20%; animation-delay: 2s;">💕</div>
        <div class="heart" style="left: 30%; animation-delay: 4s;">💗</div>
        <div class="heart" style="left: 40%; animation-delay: 6s;">💖</div>
        <div class="heart" style="left: 50%; animation-delay: 8s;">💕</div>
        <div class="heart" style="left: 60%; animation-delay: 1s;">💗</div>
        <div class="heart" style="left: 70%; animation-delay: 3s;">💖</div>
        <div class="heart" style="left: 80%; animation-delay: 5s;">💕</div>
        <div class="heart" style="left: 90%; animation-delay: 7s;">💗</div>
    </div>

    <div class="page-container">
        <!-- Page Header -->
        <header class="page-header">
            <h1 class="main-title">Happy Birthday🎉</h1>
        </header>

        <!-- Section 1: Video Hero -->
        <section class="video-hero-section">
            <div class="video-container">
                <video class="main-video" controls autoplay muted loop>
                    <source src="/asset/745.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <div class="video-overlay">
                </div>
            </div>
        </section>

        <!-- Section 2: Lantern Video + Making Grid with Portrait Video -->
        <section class="lantern-section">
            <div class="lantern-container">
                <div class="lantern-video-container">
                    <video class="lantern-video" controls autoplay muted loop>
                        <source src="/asset/lantern.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="making-grid">
                    <div class="making-video-container">
                        <video class="making-video" controls autoplay muted loop>
                            <source src="/asset/21pagehbd2.mp4" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                    <img src="/asset/saree1.png" alt="Making Process 2" class="grid-image" />
                    <img src="/asset/saree2.jpg" alt="Making Process 3" class="grid-image" />
                </div>
            </div>
        </section>

        <!-- Section 3: Final Image with Caption -->
        <section class="final-image-section">
            <div class="final-image-container">
                <div class="final-image-wrapper">
                    <img src="/asset/21page1.jpg" alt="Final Birthday Memory" class="final-image" />
                </div>
                <div class="final-caption-content">
                    <h2 class="final-caption-title"></h2>
                    <p class="final-caption-text">
                        "My soul..each time when i call you this..i definitely mean this..I don’t dream of grand
                        things..just hold your hand like this..
                        To watch your smile, to see the light in your eyes and be the strength of you everytime..just
                        you as you are...my babygirl always.. <br>
                        HAPPY BIRTHDAY MY LOVE ❤️..."
                    </p>
                </div>
            </div>
        </section>

        <!-- Section 4: Final Question -->
        <section class="final-question-section">
            <div class="question-container">
                <h1 class="final-question">Can I be yours? <br>💝 <br>
                </h1>
            </div>
        </section>
    </div>

    <script>
        // Smooth scrolling behavior
        document.addEventListener('DOMContentLoaded', () => {
            // Add smooth scroll to sections
            const sections = document.querySelectorAll('section');

            // Intersection Observer for animations
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(30px)';
                section.style.transition = 'all 1s ease-out';
                observer.observe(section);
            });

            // Video play/pause on scroll
            const videos = document.querySelectorAll('video');

            const videoObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    const video = entry.target;
                    if (entry.isIntersecting) {
                        video.play().catch(e => console.log('Video autoplay prevented'));
                    } else {
                        video.pause();
                    }
                });
            }, { threshold: 0.5 });

            videos.forEach(video => {
                videoObserver.observe(video);
            });

            // Dynamic heart generation
            function createHeart() {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = ['💖', '💕', '💗', '💝'][Math.floor(Math.random() * 4)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 10 + 's';
                heart.style.fontSize = (Math.random() * 10 + 15) + 'px';

                document.querySelector('.heart-animation').appendChild(heart);

                setTimeout(() => {
                    heart.remove();
                }, 12000);
            }

            // Create hearts periodically
            setInterval(createHeart, 3000);
        });

        // Add click interactions for grid images and video container
        document.querySelectorAll('.grid-image').forEach(img => {
            img.addEventListener('click', function () {
                this.style.transform = 'scale(1.1) rotate(5deg)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 300);
            });
        });

        // Add click interaction for video container
        document.querySelector('.making-video-container')?.addEventListener('click', function () {
            this.style.transform = 'scale(1.1) rotate(5deg)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 300);
        });
    </script>
</body>

</html>