    <script>
        // Dynamically set frame sizes and smooth entrance animations
        document.addEventListener('DOMContentLoaded', () => {
            const gallery = document.querySelector('.gallery-wrapper');
            const updateFrameSizes = () => {
                const galleryWidth = gallery.offsetWidth;
                const maxFrameWidth = window.innerWidth >= 768 ? galleryWidth / 3.5 : galleryWidth * 0.8; // Adjust for desktop vs mobile

                const frames = document.querySelectorAll('.portrait-frame');
                frames.forEach((frame, index) => {
                    const img = frame.querySelector('img');
                    img.addEventListener('load', () => {
                        const naturalWidth = img.naturalWidth;
                        const naturalHeight = img.naturalHeight;
                        const aspectRatio = naturalWidth / naturalHeight;

                        // Calculate frame size based on image dimensions
                        let frameWidth = Math.min(naturalWidth, maxFrameWidth);
                        let frameHeight = frameWidth / aspectRatio;

                        // Constrain height to fit viewport
                        const maxHeight = window.innerHeight * 0.5;
                        if (frameHeight > maxHeight) {
                            frameHeight = maxHeight;
                            frameWidth = frameHeight * aspectRatio;
                        }

                        // Apply dimensions to frame
                        frame.style.width = `${frameWidth}px`;
                        frame.style.height = `${frameHeight}px`;
                    });

                    // Fallback for image load failure
                    img.addEventListener('error', () => {
                        img.src = `https://via.placeholder.com/600x800?text=Portrait+${index + 1}`;
                        img.alt = `Fallback Portrait ${index + 1}`;
                        // Set default size for fallback image
                        frame.style.width = window.innerWidth >= 768 ? `${maxFrameWidth}px` : '80%';
                        frame.style.height = window.innerWidth >= 768 ? `${maxFrameWidth * 4 / 3}px` : `${(galleryWidth * 0.8) * 4 / 3}px`;
                    });

                    // Trigger load event for cached images
                    if (img.complete) {
                        img.dispatchEvent(new Event('load'));
                    }

                    // Smooth entrance animation
                    frame.style.opacity = '0';
                    frame.style.transform = 'translateY(30px)';
                    setTimeout(() => {
                        frame.style.transition = 'all 0.8s ease';
                        frame.style.opacity = '1';
                        frame.style.transform = 'translateY(0)';
                    }, (index + 1) * 200);
                });
            };

            // Initial sizing
            updateFrameSizes();

            // Update sizes on window resize
            window.addEventListener('resize', updateFrameSizes);

            // Text section animation
            const textSection = document.querySelector('.text-section');
            setTimeout(() => {
                textSection.style.opacity = '0';
                textSection.style.transform = 'translateY(20px)';
                textSection.style.transition = 'all 0.8s ease';
                setTimeout(() => {
                    textSection.style.opacity = '1';
                    textSection.style.transform = 'translateY(0)';
                }, 100);
            }, 800);
        });
    </script>
