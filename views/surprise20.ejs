<link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', 'Times New Roman', serif;
            background: url('https://www.transparenttextures.com/patterns/wood-pattern.png') repeat,
                        linear-gradient(135deg, #868b7a 0%, #1d1b1b 100%);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            color: #fff;
        }

        /* Header Section */
        .header-section {
            padding: 2rem 1rem;
            text-align: center;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .main-title {
            font-size: 24pt;
            color: #f4f4f4;
            font-weight: bold;
            letter-spacing: 3px;
            margin-bottom: 1rem;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
              font-family: 'Rock Salt', cursive;
        }

        .main-description {
            font-size: clamp(0.9rem, 2vw, 1.2rem);
            color: #e0e0e0;
            line-height: 1.6;
            max-width: 700px;
            margin: 0 auto;
            font-style: italic;
            opacity: 0.9;
        }

        /* Gallery Container */
        .gallery-wrapper {
            padding: 3rem 1rem;
            display: flex;
            flex-direction: row;
            justify-content: center;
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Individual Portrait Frames */
        .portrait-frame {
            background: #ffffff85; 
            border-radius: 12px;
            padding: 1rem;
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.4),
                0 5px 10px rgba(0, 0, 0, 0.3);
            transition: all 0.4s ease;
            position: relative;
            border: 8px solid transparent;
            background-image: url('https://www.transparenttextures.com/patterns/cracked.png');
            background-size: cover;
            background-position: center;
            border-image: url('https://www.transparenttextures.com/patterns/wood-pattern.png') 30 / 8px / 0 round;
        }

        .portrait-frame::before {
            content: '';
            position: absolute;
            top: 5%;
            left: -8px;
            width: 20px;
            height: 30px;
            background: url('https://www.transparenttextures.com/patterns/wood-pattern.png');
            background-size: cover;
            opacity: 0.7;
            clip-path: polygon(0 0, 100% 50%, 0 100%); /* Triangular chip */
            z-index: 1;
        }

        .portrait-frame::after {
            content: '';
            position: absolute;
            bottom: 10%;
            right: -8px;
            width: 25px;
            height: 25px;
            background: url('https://www.transparenttextures.com/patterns/wood-pattern.png');
            background-size: cover;
            opacity: 0.6;
            clip-path: polygon(0 0, 100% 0, 50% 100%); /* Triangular chip */
            z-index: 1;
        }

        .portrait-frame:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 
                0 15px 30px rgba(0, 0, 0, 0.5),
                0 8px 15px rgba(0, 0, 0, 0.4);
        }

        .portrait-image {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background: 
                #71855c;
        }

        .portrait-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            border-radius: 8px;
            display: block;
        }

        /* Text Content Section */
        .text-section {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            padding: 2rem 1.5rem;
            margin: 2rem auto;
            max-width: 900px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
            text-align: center;
            font-family: 'Caveat', cursive;
            font-size: 20pt;
        }

        .section-title {
            font-size: clamp(1.8rem, 3.5vw, 2.5rem);
            color: #f4f4f4;
            margin-bottom: 1.5rem;
            font-weight: 400;
            letter-spacing: 2px;
        }

        .section-content {
            color: #e0e0e0;
            line-height: 1.8;
            text-align: justify;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .gallery-wrapper {
                gap: 1.5rem;
            }
        }

        @media (max-width: 768px) {
            .gallery-wrapper {
                flex-direction: column;
                align-items: center;
                padding: 2rem 1rem;
            }

            .portrait-frame::before,
            .portrait-frame::after {
                width: 15px;
                height: 20px;
            }
        }

        @media (max-width: 480px) {
            .gallery-wrapper {
                padding: 1.5rem 0.5rem;
            }

            .portrait-frame::before,
            .portrait-frame::after {
                width: 12px;
                height: 18px;
            }

            .main-title {
                font-size: clamp(1.8rem, 4vw, 2.5rem);
            }

            .section-title {
                font-size: clamp(1.5rem, 3vw, 2rem);
            }
        }
    </style>
</head>
<body>
